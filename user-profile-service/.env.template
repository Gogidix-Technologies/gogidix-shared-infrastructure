# User Profile Service Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Service Configuration
SERVER_PORT=8095
SPRING_PROFILES_ACTIVE=dev
SERVICE_NAME=user-profile-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=user_profile_db
DB_USERNAME=user_profile_user
DB_PASSWORD=secure_password
DB_SSL=false
DB_POOL_SIZE=10

# Profile Settings
DEFAULT_PROFILE_VISIBILITY=public
MAX_PROFILE_IMAGE_SIZE_MB=5
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp
PROFILE_COMPLETION_LEVELS=basic,intermediate,complete
MIN_USERNAME_LENGTH=3
MAX_USERNAME_LENGTH=30

# Avatar/Profile Image Configuration
AVATAR_STORAGE_TYPE=local
AVATAR_STORAGE_PATH=/var/user-profiles/avatars
AWS_S3_BUCKET_NAME=exalt-user-avatars
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_REGION=us-east-1
DEFAULT_AVATAR_SET=robohash

# Social Integration Configuration
SOCIAL_LOGIN_ENABLED=true
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Privacy Configuration
GDPR_COMPLIANCE_ENABLED=true
DATA_EXPORT_ENABLED=true
DATA_DELETION_ENABLED=true
PROFILE_ANONYMIZATION_ENABLED=true
CONSENT_TRACKING_ENABLED=true

# Profile Verification Configuration
VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_REQUIRED=true
PHONE_VERIFICATION_REQUIRED=false
IDENTITY_VERIFICATION_REQUIRED=false
VERIFICATION_TOKEN_EXPIRES_HOURS=24

# Activity Tracking Configuration
ACTIVITY_TRACKING_ENABLED=true
LOGIN_HISTORY_ENABLED=true
PROFILE_VIEW_TRACKING_ENABLED=true
ACTIVITY_RETENTION_DAYS=90

# Preferences Configuration
PREFERENCE_CATEGORIES=notifications,privacy,display,language,timezone
DEFAULT_LANGUAGE=en
DEFAULT_TIMEZONE=UTC
THEME_OPTIONS=light,dark,auto

# Gamification Configuration
GAMIFICATION_ENABLED=true
POINTS_SYSTEM_ENABLED=true
BADGES_ENABLED=true
ACHIEVEMENTS_ENABLED=true
LEADERBOARD_ENABLED=true

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=14
CACHE_TTL_SECONDS=3600
PROFILE_CACHE_TTL_SECONDS=1800

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
TWO_FACTOR_AUTH_ENABLED=true
SESSION_TIMEOUT_MINUTES=30

# Search Configuration
SEARCH_ENABLED=true
ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
SEARCH_INDEX_NAME=user_profiles
FUZZY_SEARCH_ENABLED=true

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
PROFILE_UPDATE_RATE_LIMIT_PER_HOUR=10
SEARCH_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_PER_MINUTE=1000

# Notification Configuration
PROFILE_UPDATE_NOTIFICATIONS=true
LOGIN_NOTIFICATIONS=true
SECURITY_ALERT_NOTIFICATIONS=true
NOTIFICATION_CHANNELS=email,sms,push,in-app

# Integration with Other Services
AUTH_SERVICE_URL=http://auth-service:8080
NOTIFICATION_SERVICE_URL=http://notification-service:8091
KYC_SERVICE_URL=http://kyc-service:8088
FILE_STORAGE_SERVICE_URL=http://file-storage-service:8086

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true
PROFILE_ANALYTICS_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_USER_PROFILE=DEBUG
LOG_PATTERN_CONSOLE=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/user-profile.log
LOG_SENSITIVE_DATA=false

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka
EUREKA_INSTANCE_HOSTNAME=localhost

# Batch Processing Configuration
BATCH_PROCESSING_ENABLED=true
BATCH_SIZE=100
BATCH_TIMEOUT_MS=5000
PROFILE_SYNC_ENABLED=true

# Data Migration Configuration
MIGRATION_ENABLED=false
LEGACY_SYSTEM_URL=http://legacy-system:8080
MIGRATION_BATCH_SIZE=1000

# Performance Configuration
CONNECTION_POOL_SIZE=20
CONNECTION_TIMEOUT_MS=10000
READ_TIMEOUT_MS=30000
MAX_CONCURRENT_REQUESTS=1000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
PROFILE_ARCHIVAL_ENABLED=true

# Feature Flags
FEATURE_SOCIAL_PROFILES=true
FEATURE_PROFESSIONAL_PROFILES=true
FEATURE_ANONYMOUS_PROFILES=false
FEATURE_PROFILE_MARKETPLACE=false

# JVM Configuration
JAVA_OPTS=-Xmx2g -Xms1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200