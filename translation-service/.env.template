# Translation Service Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Service Configuration
SERVER_PORT=8094
SPRING_PROFILES_ACTIVE=dev
SERVICE_NAME=translation-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=translation_db
DB_USERNAME=translation_user
DB_PASSWORD=secure_password
DB_SSL=false
DB_POOL_SIZE=10

# Google Translate API Configuration
GOOGLE_TRANSLATE_ENABLED=true
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key
GOOGLE_TRANSLATE_PROJECT_ID=your_google_project_id

# Microsoft Translator Configuration
MICROSOFT_TRANSLATOR_ENABLED=true
MICROSOFT_TRANSLATOR_API_KEY=your_microsoft_translator_key
MICROSOFT_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com/
MICROSOFT_TRANSLATOR_REGION=global

# AWS Translate Configuration
AWS_TRANSLATE_ENABLED=false
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# DeepL API Configuration
DEEPL_ENABLED=false
DEEPL_API_KEY=your_deepl_api_key
DEEPL_API_FREE=false

# Translation Settings
DEFAULT_SOURCE_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ar,fr,es,de,it,pt,zh,ja,ko,ru,hi,ur
AUTO_DETECT_LANGUAGE=true
PRESERVE_FORMATTING=true
TRANSLATION_TIMEOUT_MS=30000

# Cache Configuration
TRANSLATION_CACHE_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=13
CACHE_TTL_SECONDS=86400
MAX_CACHE_SIZE_MB=1000

# Custom Dictionary Configuration
CUSTOM_DICTIONARY_ENABLED=true
DICTIONARY_UPDATE_INTERVAL_HOURS=24
GLOSSARY_ENABLED=true
TERMINOLOGY_MANAGEMENT_ENABLED=true

# Quality Control Configuration
QUALITY_CHECK_ENABLED=true
MIN_TRANSLATION_CONFIDENCE=0.8
BACK_TRANSLATION_VALIDATION=true
HUMAN_REVIEW_THRESHOLD=0.6

# Batch Processing Configuration
BATCH_PROCESSING_ENABLED=true
MAX_BATCH_SIZE=100
BATCH_TIMEOUT_MS=5000
MAX_CONCURRENT_BATCHES=10

# File Translation Configuration
FILE_TRANSLATION_ENABLED=true
MAX_FILE_SIZE_MB=50
SUPPORTED_FILE_FORMATS=txt,json,xml,html,md,docx,pdf
PRESERVE_FILE_FORMATTING=true

# Real-time Translation Configuration
REALTIME_TRANSLATION_ENABLED=true
WEBSOCKET_ENABLED=true
MAX_CONCURRENT_SESSIONS=1000
SESSION_TIMEOUT_MINUTES=30

# Language Detection Configuration
LANGUAGE_DETECTION_ENABLED=true
DETECTION_CONFIDENCE_THRESHOLD=0.7
MULTI_LANGUAGE_DETECTION=true
SCRIPT_DETECTION_ENABLED=true

# Translation Memory Configuration
TRANSLATION_MEMORY_ENABLED=true
TM_MATCH_THRESHOLD=0.75
TM_FUZZY_MATCHING=true
TM_AUTO_LEARN=true

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
API_KEY_REQUIRED=true
CONTENT_FILTERING_ENABLED=true

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
TRANSLATION_RATE_LIMIT_PER_MINUTE=1000
CHARACTER_LIMIT_PER_REQUEST=50000
MONTHLY_CHARACTER_LIMIT=10000000

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true
TRANSLATION_ANALYTICS_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_TRANSLATION=DEBUG
LOG_PATTERN_CONSOLE=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/translation.log
LOG_TRANSLATION_REQUESTS=true

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka
EUREKA_INSTANCE_HOSTNAME=localhost

# Webhook Configuration
WEBHOOK_ENABLED=true
WEBHOOK_URL=https://api.exalt.com/webhooks/translation
WEBHOOK_SECRET=webhook_secret_key
ASYNC_CALLBACK_ENABLED=true

# Content Processing Configuration
HTML_PARSING_ENABLED=true
MARKDOWN_SUPPORT=true
PRESERVE_PLACEHOLDERS=true
VARIABLE_PLACEHOLDER_PATTERN=\{\{.*?\}\}

# Localization Configuration
LOCALE_DETECTION_ENABLED=true
CULTURAL_ADAPTATION_ENABLED=true
NUMBER_FORMAT_LOCALIZATION=true
DATE_FORMAT_LOCALIZATION=true

# Performance Configuration
CONNECTION_POOL_SIZE=20
CONNECTION_TIMEOUT_MS=10000
READ_TIMEOUT_MS=30000
PARALLEL_PROCESSING_ENABLED=true
THREAD_POOL_SIZE=20

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
EXPORT_FORMATS=json,tmx,xliff

# Machine Learning Configuration
ML_ENHANCEMENT_ENABLED=true
ML_MODEL_UPDATE_ENABLED=true
CUSTOM_MODEL_TRAINING=false
MODEL_FEEDBACK_COLLECTION=true

# JVM Configuration
JAVA_OPTS=-Xmx2g -Xms1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200