# Admin Frameworks Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Service Configuration
SERVER_PORT=8097
SPRING_PROFILES_ACTIVE=dev
SERVICE_NAME=admin-frameworks

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=admin_frameworks_db
DB_USERNAME=admin_frameworks_user
DB_PASSWORD=secure_password
DB_SSL=false
DB_POOL_SIZE=10

# Admin Dashboard Configuration
DASHBOARD_ENABLED=true
DASHBOARD_THEME=modern
DEFAULT_DASHBOARD_LAYOUT=grid
MAX_WIDGETS_PER_DASHBOARD=20
DASHBOARD_REFRESH_INTERVAL_SECONDS=30

# Policy Management Configuration
POLICY_ENGINE_ENABLED=true
POLICY_EVALUATION_INTERVAL_SECONDS=60
POLICY_CACHE_ENABLED=true
POLICY_VERSION_CONTROL_ENABLED=true
MAX_ACTIVE_POLICIES=1000

# Region Management Configuration
MULTI_REGION_ENABLED=true
DEFAULT_REGION=global
SUPPORTED_REGIONS=global,us-east,us-west,eu-west,eu-central,ap-southeast,ap-northeast,me-south
REGION_FAILOVER_ENABLED=true

# Reporting Configuration
REPORTING_ENABLED=true
REPORT_STORAGE_PATH=/var/admin-frameworks/reports
REPORT_RETENTION_DAYS=90
SCHEDULED_REPORTS_ENABLED=true
REPORT_FORMATS=pdf,excel,csv,json

# Export Service Configuration
EXPORT_ENABLED=true
MAX_EXPORT_SIZE_MB=100
EXPORT_TIMEOUT_MINUTES=30
EXPORT_QUEUE_SIZE=100
TEMPLATE_STORAGE_PATH=/var/admin-frameworks/templates

# Audit Service Configuration
AUDIT_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_LEVEL=INFO
AUDIT_SENSITIVE_DATA_MASKING=true
AUDIT_COMPLIANCE_MODE=gdpr

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_ENDPOINT=/ws
WEBSOCKET_MESSAGE_SIZE_LIMIT=65536
WEBSOCKET_SEND_TIME_LIMIT=20000
WEBSOCKET_SEND_BUFFER_SIZE_LIMIT=512000

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_PER_MINUTE=1000
WEBSOCKET_RATE_LIMIT_PER_MINUTE=100
EXPORT_RATE_LIMIT_PER_HOUR=50

# Scheduling Configuration
SCHEDULER_ENABLED=true
SCHEDULER_THREAD_POOL_SIZE=10
SCHEDULED_TASK_HISTORY_DAYS=30
TASK_EXECUTION_TIMEOUT_MINUTES=60

# Integration Configuration
INTEGRATION_ENABLED=true
REST_CLIENT_TIMEOUT_MS=30000
REST_CLIENT_MAX_RETRIES=3
MESSAGE_BROKER_ENABLED=true

# Notification Configuration
NOTIFICATION_ENABLED=true
EMAIL_NOTIFICATIONS=true
SLACK_NOTIFICATIONS=true
WEBHOOK_NOTIFICATIONS=true
NOTIFICATION_QUEUE_SIZE=1000

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ROLE_BASED_ACCESS_ENABLED=true
TWO_FACTOR_AUTH_ENABLED=true

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=16
CACHE_TTL_SECONDS=3600
DISTRIBUTED_CACHE_ENABLED=true

# Search Configuration
SEARCH_ENABLED=true
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
SEARCH_INDEX_PREFIX=admin-frameworks
FULL_TEXT_SEARCH_ENABLED=true

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true
CUSTOM_METRICS_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_ADMIN=DEBUG
LOG_PATTERN_CONSOLE=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/admin-frameworks.log
LOG_ROTATION_ENABLED=true

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka
EUREKA_INSTANCE_HOSTNAME=localhost

# Data Synchronization Configuration
DATA_SYNC_ENABLED=true
SYNC_INTERVAL_MINUTES=15
SYNC_BATCH_SIZE=1000
CONFLICT_RESOLUTION_STRATEGY=latest-wins

# Validation Service Configuration
VALIDATION_ENABLED=true
SCHEMA_VALIDATION_ENABLED=true
BUSINESS_RULE_VALIDATION_ENABLED=true
VALIDATION_ERROR_THRESHOLD=10

# Performance Configuration
CONNECTION_POOL_SIZE=20
CONNECTION_TIMEOUT_MS=10000
READ_TIMEOUT_MS=30000
ASYNC_PROCESSING_ENABLED=true
THREAD_POOL_SIZE=20

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_AI_INSIGHTS=false
FEATURE_REAL_TIME_COLLABORATION=true
FEATURE_MOBILE_ADMIN=true

# Cloud Configuration
CLOUD_PROVIDER=aws
AWS_REGION=us-east-1
CLOUD_STORAGE_ENABLED=true
AUTO_SCALING_ENABLED=true

# JVM Configuration
JAVA_OPTS=-Xmx2g -Xms1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200