# Payment Processing Service Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Service Configuration
SERVER_PORT=8092
SPRING_PROFILES_ACTIVE=dev
SERVICE_NAME=payment-processing-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=payment_db
DB_USERNAME=payment_user
DB_PASSWORD=secure_password
DB_SSL=false
DB_POOL_SIZE=10

# Stripe Configuration
STRIPE_ENABLED=true
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_API_VERSION=2023-10-16

# PayPal Configuration
PAYPAL_ENABLED=true
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# Square Configuration
SQUARE_ENABLED=false
SQUARE_APPLICATION_ID=your_square_application_id
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_ENVIRONMENT=sandbox
SQUARE_WEBHOOK_SIGNATURE_KEY=your_square_webhook_key

# Razorpay Configuration (for India/Asia)
RAZORPAY_ENABLED=false
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Bank Transfer Configuration
BANK_TRANSFER_ENABLED=true
ACH_ENABLED=true
WIRE_TRANSFER_ENABLED=true
SEPA_ENABLED=true

# Cryptocurrency Configuration
CRYPTO_ENABLED=false
BITCOIN_ENABLED=false
ETHEREUM_ENABLED=false
CRYPTO_WALLET_ADDRESS=your_crypto_wallet_address

# Fraud Detection Configuration
FRAUD_DETECTION_ENABLED=true
FRAUD_SCORE_THRESHOLD=0.8
VELOCITY_CHECKS_ENABLED=true
GEOLOCATION_CHECKS_ENABLED=true
AVS_CHECKS_ENABLED=true
CVV_CHECKS_ENABLED=true

# PCI Compliance Configuration
PCI_COMPLIANCE_ENABLED=true
TOKEN_VAULT_ENABLED=true
FIELD_ENCRYPTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true

# Payment Retry Configuration
RETRY_ENABLED=true
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000
EXPONENTIAL_BACKOFF_ENABLED=true

# Refund Configuration
REFUND_ENABLED=true
PARTIAL_REFUND_ENABLED=true
AUTO_REFUND_THRESHOLD_AMOUNT=100.00
REFUND_PROCESSING_DELAY_HOURS=24

# Multi-Currency Configuration
MULTI_CURRENCY_ENABLED=true
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD,AUD,JPY,INR,AED,SAR
CURRENCY_CONVERSION_ENABLED=true
EXCHANGE_RATE_PROVIDER=fixer.io
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# Subscription/Recurring Payments
SUBSCRIPTION_ENABLED=true
RECURRING_PAYMENTS_ENABLED=true
PRORATION_ENABLED=true
DUNNING_MANAGEMENT_ENABLED=true

# Settlement Configuration
SETTLEMENT_ENABLED=true
AUTO_SETTLEMENT_ENABLED=true
SETTLEMENT_SCHEDULE=daily
SETTLEMENT_CURRENCY=USD
SETTLEMENT_BANK_ACCOUNT=your_settlement_account

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
API_KEY_REQUIRED=true
WEBHOOK_VERIFICATION_ENABLED=true

# Encryption Configuration
ENCRYPTION_ENABLED=true
ENCRYPTION_ALGORITHM=AES-256-GCM
ENCRYPTION_KEY=your-32-character-encryption-key
KEY_ROTATION_ENABLED=true
KEY_ROTATION_INTERVAL_DAYS=90

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=11
CACHE_TTL_SECONDS=3600
PAYMENT_METHOD_CACHE_TTL=86400

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
PAYMENT_RATE_LIMIT_PER_MINUTE=100
REFUND_RATE_LIMIT_PER_MINUTE=20
WEBHOOK_RATE_LIMIT_PER_MINUTE=500

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true
PAYMENT_ANALYTICS_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_PAYMENT=DEBUG
LOG_PATTERN_CONSOLE=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/payment.log
LOG_SENSITIVE_DATA=false

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka
EUREKA_INSTANCE_HOSTNAME=localhost

# Webhook Configuration
WEBHOOK_ENABLED=true
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT_MS=10000
WEBHOOK_VERIFY_SSL=true

# Notification Configuration
PAYMENT_NOTIFICATIONS_ENABLED=true
EMAIL_RECEIPTS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true
SLACK_NOTIFICATIONS_ENABLED=true

# Tax Calculation Configuration
TAX_CALCULATION_ENABLED=true
TAX_PROVIDER=avalara
TAX_PROVIDER_API_KEY=your_tax_provider_api_key
AUTO_TAX_CALCULATION=true

# Compliance Configuration
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555
PCI_DSS_COMPLIANCE_ENABLED=true
SOX_COMPLIANCE_ENABLED=true

# Performance Configuration
CONNECTION_POOL_SIZE=20
CONNECTION_TIMEOUT_MS=10000
READ_TIMEOUT_MS=30000
ASYNC_PROCESSING_ENABLED=true

# Disaster Recovery Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=90
CROSS_REGION_BACKUP_ENABLED=true

# JVM Configuration
JAVA_OPTS=-Xmx2g -Xms1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200