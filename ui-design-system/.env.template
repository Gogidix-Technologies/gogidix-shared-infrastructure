# UI Design System Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Project Configuration
PROJECT_NAME=exalt-ui-design-system
VERSION=1.0.0
BUILD_TARGET=production
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost
PUBLIC_URL=http://localhost:3001

# Storybook Configuration
STORYBOOK_PORT=6006
STORYBOOK_HOST=localhost
STORYBOOK_DOCS_MODE=true

# Build Configuration
BUILD_PATH=dist
STATIC_PATH=static
ASSET_PATH=/assets/
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false

# Theme Configuration
DEFAULT_THEME=light
SUPPORTED_THEMES=light,dark,auto
THEME_STORAGE_KEY=exalt-theme
CUSTOM_THEMES_ENABLED=true

# Localization Configuration
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,ar,fr,es,de,it,pt,zh,ja,ko
RTL_LANGUAGES=ar,he,fa
LOCALE_STORAGE_KEY=exalt-locale

# Typography Configuration
DEFAULT_FONT_FAMILY=Inter,system-ui,sans-serif
HEADING_FONT_FAMILY=Inter,system-ui,sans-serif
MONO_FONT_FAMILY=JetBrains Mono,monospace
FONT_OPTIMIZATION=true

# Color System Configuration
COLOR_MODE=hsl
CONTRAST_RATIO_AA=4.5
CONTRAST_RATIO_AAA=7
COLOR_PALETTE_SIZE=10

# Spacing System Configuration
BASE_SPACING_UNIT=4
SPACING_SCALE=1.25
MAX_SPACING_STEPS=20

# Component Configuration
ENABLE_ANIMATIONS=true
ANIMATION_DURATION_BASE=200ms
ANIMATION_EASING=cubic-bezier(0.4, 0, 0.2, 1)
FOCUS_RING_COLOR=#0066cc
FOCUS_RING_WIDTH=2px

# Grid System Configuration
GRID_COLUMNS=12
GRID_GUTTER=16px
GRID_BREAKPOINTS_XS=0
GRID_BREAKPOINTS_SM=576px
GRID_BREAKPOINTS_MD=768px
GRID_BREAKPOINTS_LG=992px
GRID_BREAKPOINTS_XL=1200px
GRID_BREAKPOINTS_XXL=1400px

# Icon Configuration
ICON_SET=phosphor
ICON_SIZE_BASE=24px
ICON_LIBRARY_CDN=https://unpkg.com/phosphor-icons
CUSTOM_ICONS_PATH=/assets/icons

# Development Configuration
HOT_RELOAD=true
WATCH_FILES=true
LIVE_RELOAD=true
ERROR_OVERLAY=true
DEV_TOOLS=true

# Testing Configuration
JEST_WATCH_ALL=false
COVERAGE_THRESHOLD=80
VISUAL_REGRESSION_TESTS=true
ACCESSIBILITY_TESTS=true

# Documentation Configuration
DOCS_ENABLED=true
DOCS_AUTO_GENERATE=true
COMPONENT_PROPS_DOCS=true
USAGE_EXAMPLES=true

# Performance Configuration
BUNDLE_ANALYZER=false
CODE_SPLITTING=true
TREE_SHAKING=true
MINIFICATION=true
COMPRESSION=gzip

# CDN Configuration
CDN_ENABLED=false
CDN_BASE_URL=https://cdn.exalt.com
ASSET_CDN=true
FONT_CDN=true

# Token Generation Configuration
DESIGN_TOKENS_FORMAT=json,css,scss,js
TOKENS_OUTPUT_PATH=dist/tokens
CSS_CUSTOM_PROPERTIES=true
SASS_VARIABLES=true

# Quality Assurance
LINT_ON_SAVE=true
FORMAT_ON_SAVE=true
TYPE_CHECK=true
ACCESSIBILITY_CHECK=true

# Browser Support
BROWSERLIST_CONFIG=defaults,not IE 11
POLYFILLS_ENABLED=true
LEGACY_BROWSER_SUPPORT=false

# Monitoring and Analytics
PERFORMANCE_MONITORING=false
USAGE_ANALYTICS=false
ERROR_TRACKING=false

# Security Configuration
CSP_ENABLED=true
XSS_PROTECTION=true
CONTENT_TYPE_NOSNIFF=true
FRAME_OPTIONS=DENY

# Component Library Features
COMPONENT_VARIANTS=true
COMPOUND_COMPONENTS=true
RENDER_PROPS=true
FORWARD_REF=true
CUSTOM_HOOKS=true

# Style System Features
CSS_IN_JS=styled-components
UTILITY_CLASSES=true
RESPONSIVE_DESIGN=true
DARK_MODE_SUPPORT=true

# Workflow Configuration
AUTO_DEPLOYMENT=false
VERSION_BUMP_ON_RELEASE=true
CHANGELOG_GENERATION=true
RELEASE_NOTES=true

# Integration Configuration
FIGMA_INTEGRATION=false
SKETCH_INTEGRATION=false
ABSTRACT_INTEGRATION=false
DESIGN_SYNC=false

# Environment Specific
STAGING_BASE_URL=https://staging-ui.exalt.com
PRODUCTION_BASE_URL=https://ui.exalt.com
PREVIEW_URL=https://preview-ui.exalt.com

# Logging Configuration
LOG_LEVEL=info
CONSOLE_LOGS=true
FILE_LOGS=false
REMOTE_LOGGING=false